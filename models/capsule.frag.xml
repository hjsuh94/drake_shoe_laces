  <link name="{name}">
      <pose> {x} {y} {height} 0 0 0</pose>
      <inertial>
        <pose frame=''>0 0 -{half_length} 0 0 0</pose>
        <mass>{link_mass}</mass>
        <inertia>
          <ixx>{link_ixx}</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>{link_iyy}</iyy>
          <iyz>0</iyz>
          <izz>{link_izz}</izz>
        </inertia>
      </inertial>
      <visual name='cylinder'>
        <pose frame=''> 0 0 -{half_length} 0 0 0 </pose>
        <geometry>
          <cylinder>
          <radius>{radius}</radius>
          <length>{length}</length>
          </cylinder>
        </geometry>
        <material>
          <diffuse>{r} {g} {b} 1.0</diffuse>
        </material>
      </visual>
    
      <visual name='ball_1'>
        <pose frame=''> 0 0 0 0 0 0 </pose>
        <geometry>
          <sphere>
          <radius>{radius}</radius>
          </sphere>
        </geometry>
        <material>
          <diffuse>0.4 0.4 0.4 1.0</diffuse>
        </material>
      </visual>

      <visual name='ball_2'>
        <pose frame=''> 0 0 -{length} 0 0 0 </pose>
        <geometry>
          <sphere>
          <radius>{radius}</radius>
          </sphere>
        </geometry>
        <material>
          <diffuse>0.4 0.4 0.4 1.0</diffuse>
        </material>
      </visual>

      <collision name='{name}_cylinder'>
        <pose frame=''> 0 0 -{half_length} 0 0 0 </pose>
        <geometry>
          <cylinder>
          <radius>{radius}</radius>
          <length>{length}</length>
          </cylinder>
        </geometry>
        
        <surface>
          <friction>
          <ode>
            <mu>0.5</mu>
            <mu2>0.5</mu2>
          </ode>
          </friction>
        </surface>
      </collision>

      <!-- TODO: Put collision here -->
  </link>
